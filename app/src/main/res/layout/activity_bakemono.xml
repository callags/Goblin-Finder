<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.something.goblinfinder.bakemono"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bakemono"
                    android:layout_width="251dp"
                    android:layout_height="169dp"
                    android:layout_gravity="center"
                    android:contentDescription="bakemono"
                    app:srcCompat="@drawable/bakemono" />

                <TextView
                    android:layout_width="352dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bakemono_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:text="@string/bakemono_intro"
                    android:textColor="@color/stringColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bakemono_appearance"
                    android:layout_width="wrap_content"
                    android:layout_height="266dp"
                    android:layout_gravity="center"
                    android:text="@string/bakemono_appearance"
                    android:textColor="@color/stringColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bakemono_society_pt.1"
                    android:layout_width="wrap_content"
                    android:layout_height="277dp"
                    android:layout_gravity="center"
                    android:text="@string/bakemono_society_pt.1"
                    android:textColor="@color/stringColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bakemono_society_pt.2"
                    android:layout_width="wrap_content"
                    android:layout_height="277dp"
                    android:layout_gravity="center"
                    android:text="@string/bakemono_society_pt.2"
                    android:textColor="@color/stringColor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bakemono_ecology"
                    android:layout_width="wrap_content"
                    android:layout_height="181dp"
                    android:layout_gravity="center"
                    android:text="@string/bakemono_ecology"
                    android:textColor="@color/stringColor"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="373dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/btnColor"
                    android:text="@string/btnString"
                    android:textSize="24sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>